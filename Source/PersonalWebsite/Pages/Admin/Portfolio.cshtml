@page
@model PersonalWebsite.Pages.Admin.PortfolioModel
@{
    ViewData["PageTitle"] = PageNames.Portfolio;
}
<form method="post">
    <div class="space-y-1">
        <div class="flex justify-between items-center">
            <label for="content" class="text-lg font-bold">Portfolio Content</label>
            <div>
                <input type="checkbox" id="portfolio-disable" asp-for="DisablePage" />
                <label for="portfolio-disable">Disable Page</label>
            </div>
        </div>
        <textarea class="w-full h-96 border-1 rounded-md p-2" id="content" asp-for="ContentValue"></textarea>
    </div>
    <div class="flex pt-4">
        <div class="flex-1 overflow-auto">
            HTML, CSS, and JavaScript are allowed.
        </div>
        <div>
            <button type="submit" class="button w-40">Save</button>
        </div>
    </div>
</form>
