@page
@model PersonalWebsite.Pages.Admin.LoginModel
@inject IOptions<SiteInfo> SiteInfo
@{
    Layout = "Layouts/_AdminLoginLayout";

    var siteTitle = SiteInfo.Value.Title;
}
<div class="space-y-6">
    <div class="p-6 text-3xl text-center">@siteTitle</div>
    <div class="w-96 bg-sidebar dark:bg-sidebar-dark rounded-xl p-6 space-y-6">
        <div>
            <h2>Sign in</h2>
            <span>For site owner only.</span>
        </div>
        <form method="post">
            <div class="space-y-3">
                <div class="flex items-center">
                    <input id="rememberMe" name="rememberMe" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded" />
                    <label for="rememberMe" class="ml-2 block text-sm">Remember me</label>
                </div>
                <button type="submit" class="button w-full flex items-center justify-center gap-2 h-12">
                    <span class="icon-google text-xl"></span>Sign in with Google
                </button>
            </div>
        </form>
    </div>
    <div class="text-center">
        <a asp-area="" asp-page="@Routes.Public.Home">Back to home</a>
    </div>
</div>